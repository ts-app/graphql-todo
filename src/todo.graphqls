type Query {
    todos: [Todo]
}

type Mutation {
    createTodo(title: String!): NoPayload
    updateTodo(id: String!, title: String!): NoPayload
    deleteTodo(id: String!): NoPayload
    markCompleted(id: String!, completed: Boolean): NoPayload
    deleteCompleted: NoPayload
}

type Todo {
    id: String!
    title: String!
    completed: Boolean
    createdAt: Date
}

type NoPayload {
    error: String
}
